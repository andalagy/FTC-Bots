<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textDeviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/device_name_label"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <TextView
            android:id="@+id/textNetworkStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/network_status_label" />

        <TextView
            android:id="@+id/textRobotStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/robot_status_label" />

        <TextView
            android:id="@+id/textGamepad1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gamepad1_label" />

        <TextView
            android:id="@+id/textGamepad2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gamepad2_label" />

        <TextView
            android:id="@+id/textOpMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/opmode_label"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <TextView
            android:id="@+id/textErrorMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_unknown"
            android:textColor="@android:color/holo_red_dark" />
    </LinearLayout>
</ScrollView>
